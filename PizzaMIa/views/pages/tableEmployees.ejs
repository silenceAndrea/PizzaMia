<table class="table table-striped table-dark">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Department</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        <% employees.forEach(employee=> { %>
            <tr>
                <td>
                    <%= employee._id %>
                </td>
                <td>
                    <%= employee.name %>
                </td>
                <td>
                    <%= employee.department %>
                </td>
                <td>
                    <%= employee.email %>
                </td>
            </tr>
            <% }) %>
    </tbody>
</table>